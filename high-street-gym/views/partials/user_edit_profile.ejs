<div class="member-form-container">
<form action="/user_edit_action" method="post" class="member-form">
    <h2 class="title">Account detail</h2>
    <input type="hidden" name="user_id" value="<%= user.user_id %>">
    
    <label for="user_first_name">First name:</label>
    <input type="text" id="user_first_name" name="user_first_name" value="<%= user.user_first_name %>">
    
    <label for="user_last_name">Last name:</label>
    <input type="text" id="user_last_name" name="user_last_name" value="<%= user.user_last_name %>">
    
    <label for="user_username">Username:</label>
    <input type="text" id="user_username" name="user_username" value="<%= user.user_username %>">
    
    <label for="user_phone">Phone:</label>
    <input type="text" id="user_phone" name="user_phone" value="<%= user.user_phone %>">
    
    <label for="user_email">Email:</label>
    <input type="email" id="user_email" name="user_email" value="<%= user.user_email %>">
    
    <label for="user_password">Password:</label>
    <input type="password" id="user_password" name="user_password" value="<%= user.user_password %>">
    
    <input type="hidden" name="user_roles" value="<%= user.user_roles %>">
    <input type="hidden" name="action" value="update"> <!-- Ensure this is set -->

    <button type="submit" class="update-button">Update Profile</button>
</form>

</div>