<!DOCTYPE html>
<html lang="en">
<head>
    <title>Booking Edit</title>
    <%- include("partials/head.ejs") %>
</head>
<body>
    <main>
        <%- include("partials/staff_navs.ejs") %>
        <div class="booking-title">
        <h1>Booking Edit</h1>
    </div>
        <section>
            <form action="/booking_manage_edit" method="post" class="booking-manage-edit">
                <% if (editBooking) { %>
                    <input type="hidden" name="booking_id" value="<%= editBooking.booking_id %>">

                    <label for="user_first_name">Member Name: </label>
                    <input type="text" name="user_first_name" value="<%= editBooking.user_first_name %> <%= editBooking.user_last_name %>" readonly>

                    <label for="activity_name">Class Name:</label>
                    <input type="text" name="activity_name" value="<%= editBooking.activity_name %>" readonly>

                    <label for="booking_datetime">Booking Date:</label>
                    <input type="text" name="booking_datetime" value="<%= new Date(editBooking.booking_datetime).toLocaleString('en-AU', { day: 'numeric', month: "short", year: "numeric", hour: '2-digit', minute: '2-digit'}) %>" readonly>

                    <label for="booking_status">Status:</label>
                    <select name="booking_status">
                        <option value="" disabled selected>Select</option>
                        <option value="pending">Pending</option>
                        <option value="successful">Successful</option>
                        <option value="cancelled">Cancelled</option>
                    </select>

                   

                    <div class="form-button">
                        <input type="submit" value="Delete" name="action">
                    </div>

                    <div class="form-button">
                        <input type="submit" value="Update" name="action">
                    </div>
                    
                    <div class="button">
                        <a href="/booking_manage">Back</a>
                    </div>
                <% } else { %>
                    <p>No booking found with the provided ID.</p>
                <% } %>
            </form>
            
        </section>
        <%- include("partials/footer_member.ejs") %>
    </main>
</body>
</html>
