<!DOCTYPE html>
<html lang="en">
<head>
  <title>Class manage</title>
  <%- include("partials/head.ejs") %>
</head>
<body>
  <main>
    <%- include("partials/staff_navs.ejs", { accessRole }) %>
    <div class="booking-title">
      <h1>Class Manage</h1>
    </div>
    <div class="admin-class-search">
      <form action="/admin_class" method="get" class="class-search-form">
        <label hidden for="search-term">Trainer Name</label>
        <input type="text" name="search_term" id="search-term" placeholder="Trainer Name"/>
        <input type="submit" value="Search" id="search"/>
      </form>
    </div>
    <div class="date-search-admin">
      <form action="/admin_class" method="get" class="class-search-date">
        <label hidden for="search_date_start">Date Start</label>
        <input type="date" name="search_date_start" id="search-date-start" placeholder="Date Start"/>
        <p>To</p>
        <label hidden for="search_date_end">Date End</label>
        <input type="date" name="search_date_end" id="search-date-end" placeholder="Date End"/>
        <input type="submit" value="Search" class="option-text"/>
      </form>
    </div>
    <section class="admin-class-section">
      <article class="class-schedule">
        <div class="class-header-schedule">
          <div><p>Date</p></div>
          <div><p>Class</p></div>
          <div><p>Trainer</p></div>
          <div><p>Location</p></div>
          <div><p>Duration</p></div>
          <div class="class-button-create" >
            <a href="/admin_class_create" class="class-button">Create Class</a>
          </div>
        </div>
        <div class="line"></div>
        <% classes.forEach(classItem => { %>
        <div class="class-schedule-list">
          <div>
            <p><%= new Date(classItem.class_date).toLocaleDateString('en-AU', { day: 'numeric', month: 'short', year: 'numeric' }) %></p>
          </div>
          <div><p><%= classItem.activity_name %></p></div>
          <div><p><%= classItem.class_trainer_first_name %> <%= classItem.class_trainer_last_name %></p></div>
          <div><p><%= classItem.location_name %></p></div>
          <div><p><%= classItem.activity_duration %></p></div>
          <div class="class-button" id="button-suppose">
            <a href="/admin_class_edit?edit_id=<%= classItem.class_id %>">Edit Class</a>
          </div>

            
        </div>
        <% }); %>
      </article>
    </section>
    <%- include("partials/footer_member.ejs") %>
  </main>
</body>
</html>